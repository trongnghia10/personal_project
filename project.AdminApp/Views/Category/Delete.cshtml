@model project.AdminApp.Models.CategoryModel
@{
    ViewBag.Title = "Thêm mới danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="h3 mb-2 text-gray-800" style="padding:0 22px 10px">Xóa danh mục</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">ID</label>
            <input type="text" class="form-control" id="id" name="id" @Html.DisplayFor(model => model.id)>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Tên danh mục</label>
            <input type="text" class="form-control" id="name" name="name" @Html.DisplayFor(model => model.id)>
        </div>
        <form asp-action="Delete">
            <input asp-for="id" type="hidden" />
            <button type="submit" class="btn btn-primary" id="btnSave">Lưu lại</button>
        </form>


    </div>
    <div>
        @Html.ActionLink("Quay lại danh sách", "GetAll","/Category")
    </div>
</div>
